# $Id$
# Legacy makefile: Watcom C, build os/2 executables
#

LINK=wlink
CC=wcl386
OBJ=.obj
RM=del

CFLAGS=-I..\h -I..\.. -zq -wx -bt=os2v2 -l=os2v2 -DOS2 -D__OS2__
COPT = -oneatx -5
LFLAGS=system os2v2
SRC_DIR=..\src\

OBJS = ulcsort.obj ulcomp.obj crc16.obj nlcrc.obj nldiff.obj ulc.obj nlupdate.obj string.obj nldate.obj julian.obj nlfind.obj

{$(SRC_DIR)}.c.obj: 
	$(CC) $(CFLAGS) $(COPT) -c $<

all: $(OBJS) nldiff.exe nlcrc.exe ulc.exe nlupdate.exe

nldiff.exe: nldiff.obj crc16.obj
  $(LINK) $(LFLAGS) FILE nldiff.obj, crc16.obj NAME nldiff.exe LIBRARY ..\..\fidoconf\fconfwco.lib LIBRARY ..\..\smapi\smapiwco.lib

nlcrc.exe: crc16.obj nlcrc.obj
	$(LINK) $(LFLAGS) NAME nlcrc.exe FILE crc16.obj, nlcrc.obj

ulc.exe: ulcsort.obj ulcomp.obj ulc.obj string.obj julian.obj nldate.obj nlfind.obj trail.obj
	$(LINK) $(LFLAGS) NAME ulc.exe FILE ulcsort.obj, ulcomp.obj, ulc.obj, string.obj, julian.obj, nldate.obj, nlfind.obj, trail.obj LIBRARY ..\..\fidoconf\fconfwco.lib LIBRARY ..\..\smapi\smapiwco.lib

nlupdate.exe: nlupdate.obj string.obj nldate.obj julian.obj nlfind.obj trail.obj
	$(LINK) $(LFLAGS) NAME nlupdate.exe FILE nlupdate.obj, string.obj, nldate.obj, julian.obj, nlfind.obj, trail.obj LIBRARY ..\..\fidoconf\fconfwco.lib LIBRARY ..\..\smapi\smapiwco.lib

.IGNORE

clean:
	del *.obj

distclean: clean
	del *.exe
